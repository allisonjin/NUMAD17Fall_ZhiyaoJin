<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.neu.madcourse.zhiyaojin.fragment.ControlFragment">

    <!-- Refactoring needed -->
    <LinearLayout
        android:id="@+id/top_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/pause_btn"
            android:layout_width="@dimen/control_btn_size"
            android:layout_height="@dimen/control_btn_size"
            android:layout_marginLeft="@dimen/control_btn_margin"
            android:layout_marginRight="@dimen/control_btn_margin"
            android:background="@drawable/icon_pausebutton_50" />

        <ImageButton
            android:id="@+id/music_btn"
            android:layout_width="@dimen/control_btn_size"
            android:layout_height="@dimen/control_btn_size"
            android:layout_marginLeft="@dimen/control_btn_margin"
            android:layout_marginRight="@dimen/control_btn_margin"
            android:background="@drawable/icon_audio_48" />

        <ImageButton
            android:id="@+id/game_info_btn"
            android:layout_width="@dimen/control_btn_size"
            android:layout_height="@dimen/control_btn_size"
            android:layout_marginLeft="@dimen/control_btn_margin"
            android:layout_marginRight="@dimen/control_btn_margin"
            android:background="@drawable/icon_info_48" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/words_found"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@id/top_control"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/word_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/word_padding"
        android:layout_below="@id/words_found"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/word"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:paddingTop="2dp"
            android:textAlignment="center"
            android:background="@color/gray_color" />

        <ImageButton
            android:id="@+id/word_submit_btn"
            android:layout_width="@dimen/control_btn_size"
            android:layout_height="@dimen/control_btn_size"
            android:layout_marginLeft="@dimen/control_btn_margin"
            android:background="@drawable/icon_checkmark_50" />

        <ImageButton
            android:id="@+id/word_cancel_btn"
            android:layout_width="@dimen/control_btn_size"
            android:layout_height="@dimen/control_btn_size"
            android:layout_marginLeft="@dimen/control_btn_margin"
            android:background="@drawable/icon_delete_50" />

    </LinearLayout>

</RelativeLayout>
