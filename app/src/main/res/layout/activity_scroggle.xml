<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.neu.madcourse.zhiyaojin.activity.ScroggleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/game_padding"
        android:gravity="center_horizontal"
        android:orientation="vertical">

         <!--Control fragment goes here... -->
        <fragment
            android:id="@+id/fragment_game_controls"
            class="edu.neu.madcourse.zhiyaojin.fragment.ControlFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_control" />

        <fragment
            android:id="@+id/fragment_scroggle"
            class="edu.neu.madcourse.zhiyaojin.fragment.ScroggleFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_scroggle" />

    </LinearLayout>

</FrameLayout>
